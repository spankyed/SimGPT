{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    // "baseUrl": ".",
    "importHelpers": true,
    "lib": [
      "es2019",
      "es2017",
      "DOM", "DOM.Iterable", "ESNext",
      "scripthost"
    ],
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "src": [
        "src"
      ],
      "src/*": [
        "src/*"
      ],
      "game": [
        "./src/game/"
      ],
      "game/*": [
        "./src/game/*"
      ],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],

}
